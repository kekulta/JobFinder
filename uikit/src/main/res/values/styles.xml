        <item name="backgroundTint">@color/grey2</item>
        <item name="shapeAppearance">@drawable/background_round_high</item>
    </style>

    <!--    33dp in figma!!    -->
    <style name="JobFinder.Button.Small3" parent="@android:style/Widget.Button">
