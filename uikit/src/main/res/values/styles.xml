        <item name="android:foreground">?selectableItemBackground</item>
        <item name="android:textAppearance">@style/TextAppearance.JobFinder.ButtonText1</item>
        <item name="android:background">@drawable/background_round_medium</item>
        <item name="backgroundTint">@color/blue_background_color</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:minHeight">48dp</item>
    </style>

