    <!--    40dp in figma!!    -->
    <style name="JobFinder.Button.Small1" parent="@android:style/Widget.Button">
        <item name="android:gravity">center</item>
        <item name="iconGravity">textStart</item>
        <item name="android:clipToOutline">true</item>
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="android:textAppearance">@style/TextAppearance.JobFinder.Title3</item>
        <item name="android:background">@drawable/background_round_medium</item>
        <item name="android:iconTint">@color/text_color</item>
        <item name="backgroundTint">@color/grey2</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:minWidth">48dp</item>
    </style>

    <!--    48dp in figma!!    -->
    <style name="JobFinder.Button.Small2" parent="Widget.Material3.ExtendedFloatingActionButton.Icon.Primary">
